<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/orde_id_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="2dip"
            android:paddingTop="6dip"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:text="NÂ° de commande"
            android:layout_weight="35"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orde_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="65"
            android:gravity="right"
            android:paddingBottom="2dip"
            android:paddingTop="6dip"
            android:text="test"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/order_ttc_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="2dip"
            android:text="Montant"
            android:layout_weight="35"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/order_ttc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="65"
            android:gravity="right"
            android:paddingBottom="2dip"
            android:text="test"
            android:textColor="@color/colorAccent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


        <TextView
            android:id="@+id/order_paymentDate_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date de commande"
            android:textColor="#5d5d5d"
            android:layout_weight="35"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_paymentDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="65"
            android:gravity="right"
            android:text="test"
            android:textColor="#5d5d5d"
            android:textStyle="bold" />
    </LinearLayout>
